# Environment Configuration - For Testing Only
# NEVER commit actual secrets to version control

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/pixelforge-nexus
# For production, use: mongodb+srv://username:password@cluster.mongodb.net/pixelforge-nexus

# JWT Configuration (Security: Generate strong random secrets for production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-minimum-32-characters
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Bcrypt Configuration (Security: 10-12 rounds for bcrypt is standard)
BCRYPT_ROUNDS=10

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration (Security: Restrict file types and sizes)
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,xlsx,xls,pptx
UPLOAD_DIR=./uploads

# Cloudinary Configuration (Cloud Storage for Documents)
# Get these from your Cloudinary dashboard: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Rate Limiting Configuration (Security: Prevent brute force attacks)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

DATABASE_TEST_URI=mongodb://localhost:27017/pixelforge-test

LOG_LEVEL=debug
DEBUG_QUERIES=false
DEBUG_MONGO=false


